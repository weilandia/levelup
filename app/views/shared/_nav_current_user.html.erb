<ul class="nav pull-left">
  <% if current_user  %>
    <li class="dropdown pull-right nav-icon nav-current-user">
      <span data-toggle="dropdown" style="color:#777; margin-top: 5px;" class="dropdown-toggle"><%= image_tag current_user.image_url, class:"avatar" %>
      </span>
      <ul class="dropdown-menu">
        <li>
          <%= link_to current_user.name.downcase, user_path(current_user) %>
        </li>
        <li>
          <%= link_to "logout", signout_path %>
        </li>
      </ul>
    </li>
  <% end %>
</ul>
